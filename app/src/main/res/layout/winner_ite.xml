<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

    <ImageView
            android:id="@+id/imgWinner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_132sdp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_image_black_24dp" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_24sdp"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:orientation="horizontal">

        <androidx.cardview.widget.CardView
                android:id="@+id/contact_name"
                android:layout_width="150dp"
                android:layout_height="30dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
        <TextView
                android:id="@+id/txtWinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/muli_bold"
                android:gravity="center_horizontal"
                android:paddingStart="@dimen/_10sdp"
                android:textColor="@color/black"
                android:paddingEnd="@dimen/_10sdp"
                android:text="Partner Name"
                android:textSize="@dimen/_12sdp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:id="@+id/dateCardView"
                android:layout_width="150dp"
                android:layout_height="30dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/corner_radius"
                android:layout_marginStart="50dp"
                app:cardElevation="@dimen/card_elevation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/muli_bold"
                    android:gravity="center_horizontal"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:text="Date:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <androidx.cardview.widget.CardView
                android:id="@+id/coffee_shops"
                android:layout_width="150dp"
                android:layout_height="30dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <TextView
                    android:id="@+id/txtProductName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/muli_bold"
                    android:gravity="center_horizontal"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:text="coffee shops"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:id="@+id/prizecard"
                android:layout_width="150dp"
                android:layout_height="30dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/corner_radius"
                app:cardElevation="@dimen/card_elevation"
                android:layout_marginStart="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <TextView
                    android:id="@+id/txtPrize"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/muli_bold"
                    android:gravity="center_horizontal"
                    android:paddingStart="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:paddingEnd="@dimen/_10sdp"
                    android:text="prize"
                    android:textSize="@dimen/_12sdp" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>
