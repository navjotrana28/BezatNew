<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.Pages">

    <!-- TODO: Update blank fragment layout -->
    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetEnd="0dp"
        android:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_28sdp"
                android:src="@mipmap/ic_back" />

            <TextView
                android:id="@+id/txtPages"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/tajawal_bold"
                android:gravity="center"
                android:text="@string/offer_detail_inuser"
                android:textSize="@dimen/_14sdp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_28sdp"
                android:src="@mipmap/ic_back"
                android:visibility="invisible" />

        </LinearLayout>
    </Toolbar>

    <LinearLayout
        android:id="@+id/offer_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/offer_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_124sdp"
            android:scaleType="fitXY"
            android:src="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_5sdp">

            <TextView
                android:id="@+id/store_name"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_weight="1"
                android:fontFamily="@font/tajawal_bold"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_16sdp" />

            <ImageView
                android:id="@+id/imgSaved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_favorite_black_24dp"
                android:tint="@color/partnerline" />
        </LinearLayout>

        <TextView
            android:id="@+id/offer_descp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/tajawal_bold"
            android:maxLines="1"
            android:padding="@dimen/_7sdp"
            android:text="Meet a star"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_16sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView

                android:layout_width="@dimen/_96sdp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tajawal_regular"
                android:gravity="end"
                android:minWidth="@dimen/_148sdp"
                android:text="@string/offer_price_user"
                android:padding="@dimen/_3sdp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/discount_price"
                android:layout_width="@dimen/_96sdp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tajawal_medium"
                android:gravity="start"
                android:padding="@dimen/_3sdp"
                android:paddingStart="@dimen/_5sdp"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_13sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/_96sdp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tajawal_regular"
                android:gravity="end"
                android:minWidth="@dimen/_148sdp"
                android:padding="@dimen/_3sdp"
                android:text="@string/orginal_price_user"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/actual_price"
                android:layout_width="@dimen/_96sdp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tajawal_medium"
                android:gravity="start"
                android:padding="@dimen/_3sdp"
                android:paddingStart="@dimen/_5sdp"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_13sdp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgBarCode"
            android:layout_width="@dimen/_126sdp"
            android:layout_height="@dimen/_126sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/tajawal_regular"
                android:gravity="end"
                android:paddingRight="@dimen/_7sdp"
                android:text="@string/code_offer"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/offer_coupon_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/tajawal_regular"
                android:gravity="start"
                android:paddingStart="@dimen/_5sdp"
                android:text="HLF1T71"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_14sdp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnRedeem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:padding="@dimen/_7sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:text="@string/redeem_in_offer"
            android:textSize="@dimen/_14sdp" />

    </LinearLayout>

</RelativeLayout>